# XingHan-Team Docker 环境配置示例
# 复制此文件为 .env 并修改相应配置

# 数据库配置
DB_HOST=mysql
DB_NAME=xinghan_team
DB_USER=root
DB_PASS=xinghan123

# MySQL 配置
MYSQL_ROOT_PASSWORD=xinghan123
MYSQL_DATABASE=xinghan_team
MYSQL_USER=team
MYSQL_PASSWORD=team123

# 端口配置
WEB_PORT=8080
MYSQL_PORT=3306
PHPMYADMIN_PORT=8081

# 应用配置
APP_ENV=production
APP_DEBUG=false

# 邮件配置（可选）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls

# 安全配置
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600

# 文件上传配置
MAX_UPLOAD_SIZE=5M
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,docx

# 时区配置
TIMEZONE=Asia/Shanghai